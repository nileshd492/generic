apiVersion: v1
kind: Namespace
metadata:
  name: commvault-poc
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: commvault-poc-sa
  namespace: commvault-poc
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: commvault-poc-crb
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
  - kind: ServiceAccount
    name: commvault-poc-sa
    namespace: commvault-poc
---
apiVersion: v1
kind: Secret
metadata:
  name: commvault-poc-secret
  namespace: commvault-poc
  annotations:
    kubernetes.io/service-account.name: commvault-poc-sa
type: kubernetes.io/service-account-token
